<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_student_id_card">
        <t t-call="web.html_container">  

            <t t-call="web.external_layout">
            
            <!-- <t t-foreach="docs" t-as="student"> -->

                <div class="page">
                    <div class="row">
                        <div class="col-xs-12"> 
                        <!-- its a bootstrap class which reduses the size-->
                        <!-- <div class="header">
                            <h1 class="text-center">STUDENT REPORT</h1> -->

                            <h2>Student Report</h2>
                        <!-- </div> -->
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Mobile No.</th>
                                        <th>Email Address</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>Class Teacher</th>
                                        <th>Standard</th>
                                        <th>Grade</th>
                                        <th>Activities</th>
                                        <th>Achievements</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs" t-as="student">
                                        <tr>
                                            <td><span t-field="student.name"/></td>
                                            <td><span t-field="student.gender"/></td>
                                            <td><span t-field="student.mobile_no"/></td>
                                            <td><span t-field="student.email_address"/></td>
                                            <td><span t-field="student.address"/></td>
                                            <td><span t-field="student.city"/></td>
                                            <td><span t-field="student.class_teacher_id"/></td>
                                            <td><span t-field="student.standard"/></td>
                                            <td><span t-field="student.grade"/></td>
                                            <td><span t-field="student.activities"/></td>
                                            <td><span t-field="student.achivements"/></td>
                                            <td><span t-field="student.status"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <!-- </t> -->
        </t>
    </t>
        </template>
    </data>
</odoo>

