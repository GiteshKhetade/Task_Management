<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_teacher_id_card">
        <t t-call="web.html_container"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-8">
                            <table class="table table-condensed" style="border:3px solid black !important;">
                                <tr>
                                    <td width="40%">
                                        <p style="text-align:center;padding-top:10px;">
                                            <img t-if="not o.image" t-att-src="'/web/static/src/img/placeholder.png'" height="140" border="1" width="120"/>
                                        </p>
                                    </td>
                                    <td width="60%">
                                        <table>
                                            <tr>
                                                <td colspan="3" class="text-center">
                                                    <span t-field="o.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>     
                                                    <span>
                                                        <strong> Teacher Name:- </strong>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.teacher_name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong> Mobile NO:- </strong>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.mobile_no"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <t t-if="o.email_address">
                        <span> Teacher Report </span>
                        <table class="table table-sm o_main_table" name="teacher">
                            <thead>
                                <tr>
                                    <th name="th_teacher_name" class="text-left">
                                        <span> Name </span>
                                    </th>
                                    <th name="th_mobile_no" class="text-left">
                                        <span> Mobile No </span>
                                    </th>
                                    <th name="th_email_address" class="text-left">
                                        <span> Email Address </span>
                                    </th>
                                </tr>
                            </thead>
                            <t t-foreach="o.name" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.mobile_no"/>
                                    </td>
                                    <td>
                                    <span t-field="line.email_address"/>
                                    </td>
                                    </tr>
                                </t>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>










