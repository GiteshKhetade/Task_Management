<odoo>
    <data>
<!-- form view  -->
    <record id="view_details_form" model="ir.ui.view">
        <field name="name">school.details.form</field>
        <field name="model">school.details</field>
        <field name="arch" type="xml">
            <form string="Details">
            <sheet> <h1> <u> Student Details </u> </h1>
                <group>
                    <field name="name_id"/> 
                    <field name="gender"/> 
                    <field name="mobile_no"/> 
                         <field name="email_address"/> 
                         <field name="address"/>
                         <field name="city"/>
                </group>
                <group>
                <!-- <field name="teacher_name_id"/> -->
                <!-- <field name="qualification"/> -->
                <!-- <field name="specailization"/> -->
                </group>
                
                <notebook>
                    <page name="med_history" string="Medical History">
                        <group>
                            <field name="medical"/>
                        </group>
                    </page>
                    <page name="med_details" string="Medicine Information">
                        <group>
                            <field name="medicine_info_ids">
                        <tree>
                            <field name="name"/>
                            <field name="quantity"/>
                        </tree>

                        <form>
                        <group>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>   
                        </form>
                            </field>
                        </group>
                    </page>
                </notebook>

            </sheet>
            </form>
        </field>
    </record>

<!-- tree view -->
    <record id="view_details_tree" model="ir.ui.view">
        <field name="name">school.details.tree</field>
        <field name="model">school.details</field>
        <field name="arch" type="xml">
            <tree string="Details">
                <field name="name_id"/>
                <field name="gender"/>
                <field name="mobile_no"/>
                <field name="email_address"/>
                <field name="address"/>
                <field name="city"/>
                <!-- <field name="teacher_name_id"/> -->
                <!-- <field name="qualification"/> -->
                <!-- <field name="specailization"/> -->
            </tree>
        </field>
    </record>

<!-- action view -->
      <record id="action_school_details" model="ir.actions.act_window">
            <field name="name">details</field>
            <field name="res_model">school.details</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="xml">
                <p class="o_view_nocontent_smiling_face">
                    ADD details
                </p>
            </field>
        </record>
    </data>
</odoo>